@page "/categorygroup"
@using Realta.Frontend.Components
<PageTitle>Category Group</PageTitle>

<section class="table-components">
    <div class="container-fluid">
        <!-- ========== title-wrapper start ========== -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>Category Group</h2>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper mb-30">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/categorygroup">categorygroup</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Category Group
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- ========== title-wrapper end ========== -->
        <!-- ========== tables-wrapper start ========== -->
        <div class="tables-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-style mb-30">
                        <div class="table-wrapper table-responsive">
                            <CategoryGroupTable CategoryGroups="CategoryGroupList"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end container -->
</section>

<!-- Modal Add Category Group -->
<div class="modal fade" id="addcagro" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addCagroLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Add Category Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>

                    <div class="card-style mb-30">
                        <div class="mb-3 row">
                            <label for="recipient-name" class="col-sm-2 col-form-label">Group Name:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Item-price">
                            </div>
                        </div>

                        <div class="select-style-2  mb-3 row">
                            <label class="col-sm-2 col-form-label">Type</label>
                            <div class="select-position col-sm-10">
                                <select>
                                    <option value="">Select category</option>
                                    <option value="">Category</option>
                                    <option value="">Service</option>
                                    <option value="">Facility</option>
                                </select>
                            </div>
                        </div>



                        <div class="row">
                            <label for="policyrules" class="col-sm-2 col-form-label">Policy Rules:</label>
                            <div class="input-style-2 col-sm-10 ">
                                <input type="text" placeholder="Search">
                                <span class="icon"><i class="lni lni-search-alt"></i></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Description:</label>
                            <textarea class="form-control" id="Description"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="formFileSm" class="form-label">Upload Icon</label>
                            <input class="form-control form-control-sm" id="formFileSm" type="file">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Delete Category Group -->
<div class="modal fade" id="deletecagro" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deletecagroLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure want delete this item?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger">Yes</button>
            </div>
        </div>
    </div>
</div>

