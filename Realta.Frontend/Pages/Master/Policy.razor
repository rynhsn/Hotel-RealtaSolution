@page "/policy"
<PageTitle>Policy</PageTitle>

<section class="table-components">
    <div class="container-fluid">
        <!-- ========== title-wrapper start ========== -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>Policy</h2>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper mb-30">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/policy">policy</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Policy
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- ========== title-wrapper end ========== -->
        <!-- ========== tables-wrapper start ========== -->
        <div class="tables-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-style mb-30">
                        <div class="table-wrapper table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th><h6>Policy ID</h6></th>
                                        <th><h6>Policy Name</h6></th>
                                        <th>
                                            <div class="action">
                                                <button class="text-dark">
                                                    <i class="lni lni-plus"></i>
                                                </button>
                                            </div>
                                        </th>
                                    </tr>
                                    <!-- end table row-->
                                </thead>
                                <tbody>
                                    @for (int i = 1; i <= 3; i++)
                                    {
                                        <tr>
                                            <td class="min-width">
                                                <p>@i</p>
                                            </td>
                                            <td class="min-width">
                                                <p>Members</p>
                                            </td>

                                            <td>
                                                <div class="action">
                                                    <button class="text-dark">
                                                        <i class="lni lni-pencil"></i>
                                                    </button>
                                                    <button class="text-dark">
                                                        <i class="lni lni-trash-can"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end container -->
</section>