@using Realta.Frontend.Pages.Master
@if (Policy.Count > 0)
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col"><h6>ID</h6></th>
                <th scope="col"><h6>Policy Name</h6></th>
                <th style="width: 800px;" ><h6>Policy Description</h6></th>
                <th>
                    <div class="action">
                        <button class="text-dark">
                            <i class="lni lni-plus"></i>
                        </button>
                    </div>
                </th>
            </tr>
            <!-- end table row-->
        </thead>
        <tbody>
            @foreach (var policy in Policy)
            {
                <tr>
                    <td>@policy.PoliId</td>
                    <td>@policy.PoliName</td>
                    <td>@policy.PoliDescription</td>


                    <td>
                        <div class="action">
                            <button class="text-dark">
                                <i class="lni lni-pencil"></i>
                            </button>
                            <button class="text-dark">
                                <i class="lni lni-trash-can"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}