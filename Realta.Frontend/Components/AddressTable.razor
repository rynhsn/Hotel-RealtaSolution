@if (Address.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th><h6>ID</h6></th>
                <th><h6>Address Line 1</h6></th>
                <th><h6>Address Line 2</h6></th>
                <th><h6>Postal Code</h6></th>
                <th><h6>Spatial Location</h6></th>

                <th>
                    <div class="action">
                        <button class="text-dark">
                            <i class="lni lni-plus"></i>
                        </button>
                    </div>
                </th>

            </tr>
            <!-- end table row-->
        </thead>
        <tbody>
            @foreach (var address in Address)
            {
                <tr>
                    <td>@address.AddrId</td>
                    <td>@address.AddrLine1</td>
                    <td>@address.AddrLine2</td>
                    <td>@address.AddrPostalCode</td>
                    <td>@address.AddrSpatialLocation</td>
                    <td>

                        <div class="action">
                            <button class="text-dark">
                                <i class="lni lni-pencil"></i>
                            </button>
                            <button class="text-dark">
                                <i class="lni lni-trash-can"></i>
                            </button>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}